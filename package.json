{
  "name": "dual-layer-evm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "start-node": "bash scripts/start-node.sh",
    "commit-hot-to-cold": "bash scripts/commit-hot-to-cold.sh",
    "benchmark": "bash scripts/benchmark-tps.sh",
    "forge:build": "cd contracts && forge build",
    "forge:test": "cd contracts && forge test",
    "node:build": "cd node && cargo build --release",
    "node:test": "cd node && cargo test"
  },
  "devDependencies": {
    "@turbo/gen": "^2.0.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
